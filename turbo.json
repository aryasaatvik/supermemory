{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"deploy": {},
		"dev": {
			"env": [
				"NODE_ENV=development",
				"AUTH_GOOGLE_ID",
				"AUTH_GOOGLE_SECRET",
				"AUTH_SECRET",
				"R2_ENDPOINT",
				"R2_ACCESS_ID",
				"R2_SECRET_KEY",
				"R2_BUCKET_NAME"
			],
			"cache": false,
			"persistent": true
		}
	}
}
